{
  "name": "panelade-casa",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:backend": "npm --workspace apps/backend run start:dev",
    "dev:web": "npm --workspace apps/web run dev",
    "dev": "npm-run-all -p dev:backend dev:web",
    "build": "npm --workspace apps/backend run build && npm --workspace apps/web run build",
    "build:backend": "npm --workspace apps/backend run build",
    "build:web": "npm --workspace apps/web run build",
    "start": "npm --workspace apps/backend run start:prod",
    "start:backend": "npm --workspace apps/backend run start:prod",
    "lint": "echo 'add linters per package'",
    "postinstall": "npm --workspace apps/backend run postinstall || true"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
